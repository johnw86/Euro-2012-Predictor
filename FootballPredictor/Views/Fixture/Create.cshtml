@model FootballPredictor.Models.Fixture

@{
    ViewBag.Title = "Create";
    var groups = ViewBag.Groups as IEnumerable<FootballPredictor.Models.Group>;
    var teams = ViewBag.Teams as IEnumerable<FootballPredictor.Models.Team>;
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Fixture</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.Group)
        </div>
        <div class="editor-field">
            @Html.DropDownList("GroupId", groups.Select(x=> new SelectListItem{Text = x.Name, Value = x.Id.ToString()}))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Home)
        </div>
        <div class="editor-field">
            @Html.DropDownList("HomeTeamId", teams.OrderBy(x=>x.Name).Select(x=> new SelectListItem{Text = x.Name, Value = x.Id.ToString()}))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Away)
        </div>
        <div class="editor-field">
            @Html.DropDownList("AwayTeamId", teams.OrderBy(x => x.Name).Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() }))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
